      <unitTest>
         <includes>
            <include>**/*Test.java</include>
         </includes>
         <resources>
           <resource>
             <directory>src/test</directory>
             <excludes><exclude>**/*.java</exclude></excludes>
           </resource>
         </resources>
      </unitTest>
      <resources>
        <resource>
          <directory>${basedir}</directory>
          <includes>
            <include>NOTICE.txt</include>
          </includes>
          <targetPath>META-INF</targetPath>
        </resource>
      </resources>
    </build>
